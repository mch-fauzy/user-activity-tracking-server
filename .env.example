# APP
NODE_ENV=development
APP_NAME=UserActivityTrackingServer
APP_PORT=3000
APP_TZ=UTC

# DB (Use 'postgres:5432' for Docker, 'localhost:54332' for local development)
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=user_activity_db
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=10

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-12345678
JWT_EXPIRES_IN_SECONDS=86400

# ENCRYPTION
ENCRYPTION_SECRET=your-super-secret-encryption-key-change-in-production

# REDIS
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=50
REDIS_MAX_RETRY_DELAY=2000

# CACHE
CACHE_TTL_USAGE=3600
LOCAL_CACHE_MAX_SIZE_ENTRIES=500

# RATE LIMITING
RATE_LIMIT_DEFAULT=5
RATE_LIMIT_WINDOW_SECONDS=60

# QUEUE LOG
QUEUE_LOG_BATCH_SIZE=50
QUEUE_LOG_FLUSH_INTERVAL_MS=5000
